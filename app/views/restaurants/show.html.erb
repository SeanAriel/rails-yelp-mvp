<p id="notice"><%= notice %></p>

<div class="text-center" style="background-color: lightgrey; padding: 20px; margin: 20px;">
    <p>
      <strong>Name:</strong>
      <%= @restaurant.name %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>

    <p>
      <strong>Phone number:</strong>
      <%= @restaurant.phone_number %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @restaurant.category %>
    </p>
</div>

<div>
  <p class="text-center">
    <strong>Reviews:</strong>
  </p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th class=>Content</th>
        <th class=>Rating</th>
      </tr>
      <tbody>
        <% @restaurant.reviews.each do |review| %>
        <tr>
          <td><%= review.content%></td>
          <td><%= review.rating%></td>
        </tr>
        <% end %>
      </tbody>
     </thead>
  </table>
</div>

<div class="text-center container">
<div class="row">
<div class="col-md-offset-3 col-md-6" style="background-color: lightgrey; padding: 20px; border-radius: 10px;">
  <%= render 'reviews/new'%>
</div>
</div>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
