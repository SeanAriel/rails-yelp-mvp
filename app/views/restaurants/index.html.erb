<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Restaurants</h1>
</div>
  <div class="table-responsive container" style="margin-top:50px">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class=>Name</th>
          <th class=>Address</th>
          <th class=>Phone number</th>
          <th class=>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.phone_number %></td>
            <td><%= restaurant.category %></td>
            <td><%= link_to 'Show', restaurant_path(restaurant), class: "btn btn-primary"%></td>
            <td><%= link_to 'Add review', restaurant_path(restaurant), class: "btn btn-primary"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="text-center" style="margin-top: 50px">
  <%= link_to 'Create New Restaurant', new_restaurant_path, class: "btn btn-primary" %>
</div>
